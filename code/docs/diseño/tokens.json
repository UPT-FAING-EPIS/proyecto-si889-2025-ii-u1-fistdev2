{
  "version": "1.0",
  "name": "DevFlow Design System",
  "description": "Sistema de dise√±o para la plataforma DevFlow",
  "colors": {
    "primary": {
      "50": "#eff6ff",
      "100": "#dbeafe", 
      "200": "#bfdbfe",
      "300": "#93c5fd",
      "400": "#60a5fa",
      "500": "#3b82f6",
      "600": "#2563eb",
      "700": "#1d4ed8",
      "800": "#1e40af",
      "900": "#1e3a8a"
    },
    "secondary": {
      "50": "#f8fafc",
      "100": "#f1f5f9",
      "200": "#e2e8f0",
      "300": "#cbd5e1",
      "400": "#94a3b8",
      "500": "#64748b",
      "600": "#475569",
      "700": "#334155",
      "800": "#1e293b",
      "900": "#0f172a"
    },
    "success": {
      "50": "#f0fdf4",
      "500": "#22c55e",
      "600": "#16a34a"
    },
    "warning": {
      "50": "#fffbeb",
      "500": "#f59e0b", 
      "600": "#d97706"
    },
    "error": {
      "50": "#fef2f2",
      "500": "#ef4444",
      "600": "#dc2626"
    },
    "info": {
      "50": "#f0f9ff",
      "500": "#06b6d4",
      "600": "#0891b2"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": ["Inter", "system-ui", "sans-serif"],
      "mono": ["JetBrains Mono", "Monaco", "monospace"]
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem", 
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },
  "spacing": {
    "0": "0px",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem", 
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem"
  },
  "borderRadius": {
    "none": "0px",
    "sm": "0.125rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px", 
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "components": {
    "button": {
      "base": {
        "padding": "0.5rem 1rem",
        "borderRadius": "md",
        "fontWeight": "medium",
        "fontSize": "sm",
        "transition": "all 0.2s",
        "cursor": "pointer",
        "border": "none",
        "display": "inline-flex",
        "alignItems": "center",
        "justifyContent": "center",
        "gap": "0.5rem"
      },
      "variants": {
        "primary": {
          "backgroundColor": "primary.600",
          "color": "white",
          "hover": {
            "backgroundColor": "primary.700"
          }
        },
        "secondary": {
          "backgroundColor": "secondary.200",
          "color": "secondary.800",
          "hover": {
            "backgroundColor": "secondary.300"
          }
        },
        "outline": {
          "backgroundColor": "transparent",
          "color": "primary.600",
          "border": "1px solid",
          "borderColor": "primary.600",
          "hover": {
            "backgroundColor": "primary.50"
          }
        }
      },
      "sizes": {
        "sm": {
          "padding": "0.375rem 0.75rem",
          "fontSize": "xs"
        },
        "md": {
          "padding": "0.5rem 1rem",
          "fontSize": "sm"
        },
        "lg": {
          "padding": "0.75rem 1.5rem",
          "fontSize": "base"
        }
      }
    },
    "input": {
      "base": {
        "padding": "0.5rem 0.75rem",
        "borderRadius": "md",
        "border": "1px solid",
        "borderColor": "secondary.300",
        "fontSize": "sm",
        "transition": "all 0.2s",
        "width": "100%",
        "focus": {
          "outline": "none",
          "borderColor": "primary.500",
          "boxShadow": "0 0 0 3px rgb(59 130 246 / 0.1)"
        }
      }
    },
    "card": {
      "base": {
        "backgroundColor": "white",
        "borderRadius": "lg",
        "padding": "1.5rem",
        "boxShadow": "md",
        "border": "1px solid",
        "borderColor": "secondary.200"
      }
    },
    "modal": {
      "overlay": {
        "position": "fixed",
        "inset": "0",
        "backgroundColor": "rgb(0 0 0 / 0.5)",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "zIndex": "50"
      },
      "content": {
        "backgroundColor": "white",
        "borderRadius": "lg",
        "padding": "2rem",
        "maxWidth": "32rem",
        "width": "90%",
        "maxHeight": "90vh",
        "overflow": "auto"
      }
    }
  },
  "darkMode": {
    "colors": {
      "background": "#0f172a",
      "surface": "#1e293b",
      "text": {
        "primary": "#f8fafc",
        "secondary": "#cbd5e1"
      }
    }
  }
}
